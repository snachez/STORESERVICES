#See https://aka.ms/containerfastmode to understand how Visual Studio uses this Dockerfile to build your images for faster debugging.

FROM mcr.microsoft.com/dotnet/aspnet:6.0 AS base
WORKDIR /app
EXPOSE 80
EXPOSE 443

FROM mcr.microsoft.com/dotnet/sdk:6.0 AS build
WORKDIR /src
COPY ["STORESERVICES.API.SHOPPINGCART/STORESERVICES.API.SHOPPINGCART.csproj", "STORESERVICES.API.SHOPPINGCART/"]
COPY ["STORESERVICES.API.SHOPPINGCART.SERVICES/STORESERVICES.API.SHOPPINGCART.SERVICES.csproj", "STORESERVICES.API.SHOPPINGCART.SERVICES/"]
COPY ["STORESERVICES.API.SHOPPINGCART.DAO/STORESERVICES.API.SHOPPINGCART.DAO.csproj", "STORESERVICES.API.SHOPPINGCART.DAO/"]
COPY ["STORESERVICES.API.SHOPPINGCART.MODEL/STORESERVICES.API.SHOPPINGCART.MODEL.csproj", "STORESERVICES.API.SHOPPINGCART.MODEL/"]
RUN dotnet restore "STORESERVICES.API.SHOPPINGCART/STORESERVICES.API.SHOPPINGCART.csproj"
COPY . .
WORKDIR "/src/STORESERVICES.API.SHOPPINGCART"
RUN dotnet build "STORESERVICES.API.SHOPPINGCART.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "STORESERVICES.API.SHOPPINGCART.csproj" -c Release -o /app/publish

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "STORESERVICES.API.SHOPPINGCART.dll"]