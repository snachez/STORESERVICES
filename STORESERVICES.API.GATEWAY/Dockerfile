#See https://aka.ms/containerfastmode to understand how Visual Studio uses this Dockerfile to build your images for faster debugging.

FROM mcr.microsoft.com/dotnet/aspnet:6.0 AS base
WORKDIR /app
EXPOSE 80
EXPOSE 443

FROM mcr.microsoft.com/dotnet/sdk:6.0 AS build
WORKDIR /src
COPY ["STORESERVICES.API.GATEWAY/STORESERVICES.API.GATEWAY.csproj", "STORESERVICES.API.GATEWAY/"]
COPY ["STORESERVICES.API.GATEWAY.SERVICES/STORESERVICES.API.GATEWAY.SERVICES.csproj", "STORESERVICES.API.GATEWAY.SERVICES/"]
COPY ["STORESERVICES.API.GATEWAY.DAO/STORESERVICES.API.GATEWAY.DAO.csproj", "STORESERVICES.API.GATEWAY.DAO/"]
COPY ["STORESERVICES.API.GATEWAY.MODEL/STORESERVICES.API.GATEWAY.MODEL.csproj", "STORESERVICES.API.GATEWAY.MODEL/"]
RUN dotnet restore "STORESERVICES.API.GATEWAY/STORESERVICES.API.GATEWAY.csproj"
COPY . .
WORKDIR "/src/STORESERVICES.API.GATEWAY"
RUN dotnet build "STORESERVICES.API.GATEWAY.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "STORESERVICES.API.GATEWAY.csproj" -c Release -o /app/publish

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "STORESERVICES.API.GATEWAY.dll"]